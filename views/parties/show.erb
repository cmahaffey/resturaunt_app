<header>
  <form class="" action="/parties/<%=@party.id%>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input class="button top-right" type="submit" value="Remove party">
  </form>
  <h3>Party <%=@party.id%></h3>
</header>


<div id="body"class="row">
  <div class="col s6">
    <h4>Table:<%=@party.table_name%></h4>
  </div>

  <div class="col s6">
    <h4>People:<%=@party.num_persons%></h4>
  </div>
  <div class="col s6">
    <h5>Server:<%=@party.server.name%></h5>

  </div>
  <div class="col s6">
    <h5>Paid?  <%if @party.paid%>
                  Yes
               <%else%>
                  No
               <%end%>
    </h5>
  </div>
<div class="col s12">
    <h4 class="lister">Orders:</h4>
</div>
  <div class="row">
    <ul>
      <%@party.items.each do |item|%>
        <li>
          <%=item.food.name%><br>
          <%unless item.description==' '%>
            <ul><li><%=item.description%>
            </li></ul>
          <%end%>
          <a href="/items/<%=item.id%>/edit">modify</a>
          <form class="" action="/items/<%=item.id%>" method="post">
            <input type="hidden" name="_method" value="delete">
            <input type="submit" value="cancel">
          </form>
        </li>
    <%end%>
    </ul>
  </div>

</div>
<!-- <a href="/items">Get reciept</a> <br>-->




<footer>
  <div  class="row valign-wrapper">
        <a class=" col s4 valign" href="/servers/<%=@party.server.id%>/parties">Back</a>
        <a class=" col s4 valign" href="/items/new?party=<%=@party.id%>">Order</a>
      <a class="col s4 valign" href="/parties/<%=@party.id%>/edit"> Edit</a>
  </div>
</footer>
