<header>
  <form class="" action="/parties/<%=@party.id%>" method="post">
    <input type="hidden" name="_method" value="delete">
    <input class="button top-right" type="submit" value="Remove party">
  </form>
  <h3>Party <%=@party.id%></h3>
</header>


<div id="body"class="row">
  <div class="col s6">
    <h4>Table:<%=@party.table_name%></h4>
  </div>

  <div class="col s6">
    <h4>People:<%=@party.num_persons%></h4>
  </div>
  <div class="col s6">
    <h5>Server:<%=@party.server.name%></h5>

  </div>
  <div class="col s6">
    <h5>Paid?  <%if @party.paid%>
                  Yes
               <%else%>
                  No
               <%end%>
    </h5>
  </div>
<div class="col s11 offset-s1">
    <h4 class="lister">Orders:</h4>
</div>
  <div class="row">
    <ul>
      <%@party.items.each do |item|%>
        <li class=orders>
          <div class=" col s5 offset-s2">
            <p class="order">
              <%=item.food.name%><br>
            </p>
            <%unless item.description==''%>
              <ul >
                  <%item.description.split(",").each do |description|%>
                    <li class= "order-desc">
                      <%=description%>
                    </li>
                  <%end%>
            </ul>
          </div>
          <div class="mods col s4">
            <a class="button"href="/items/<%=item.id%>/edit">Modify Order</a>
          </div>

          <%end%>
        </li>
    <%end%>
    </ul>
  </div>
  <div class="center">
    <a class="button reciept-link"href="/items">Get reciept</a> <br>
  </div>
</div>




<footer>
  <div  class="row valign-wrapper">
        <a class=" col s4 valign" href="/servers/<%=@party.server.id%>/parties">Back</a>
        <a class=" col s4 valign" href="/items/new?party=<%=@party.id%>">Order</a>
      <a class="col s4 valign" href="/parties/<%=@party.id%>/edit"> Edit</a>
  </div>
</footer>
